<style>
  .about-testimonial {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  @media (max-width: 1199px) {
    .about-testimonial {
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px) {
    .about-testimonial {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  
/*list content*/
.about-testimonial .text-content{
  position: relative;
  display: flex;
  align-items: center;
}
.about-testimonial .text-content .test-img {
  width: 155px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 20px;
  position: relative;
}
.about-testimonial .text-content .test-img img{
  border-radius: 50%;
}
.about-testimonial .text-content .test-img img {
  width: 155px;
  height: 155px;
  object-fit: cover;
}
.about-testimonial .text-content .test-img span {
  color: #fff;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0px;
  background-color: var(--font-color-primary);
  border-radius: 50%;
}
.about-testimonial .text-content .testi-desc {
  width: calc(100% - 185px);
  {% if settings.enable_rtl %}
  margin-right: 30px;
  {% else %}
  margin-left: 30px;
  {% endif %}
}
.about-testimonial .text-content .testi-desc p{
  font-weight: 400;
  line-height: 30px;
  max-width: 85%;
}
.about-testimonial .text-content .testi-desc .auth-bio {
  display: flex;
  align-items: center;
  margin-top: 30px;
} 
.about-testimonial .text-content .testi-desc .auth-bio h6{
  color: var(--font-color-primary);
  font-size: 18px;
  font-weight: var(--font-subtitle-weight-body);
}
.about-testimonial .text-content .testi-desc .auth-bio span:before{
  content: '-';
  margin: 0 10px;
}
@media(max-width: 1599px){
  .about-testimonial .text-content .testi-desc p{
    max-width: 100%;
  }
}

@media(max-width: 991px){
  .about-testimonial .text-content .testi-desc p{
    font-size: 14px;
    line-height: 25px;
  }
  .about-testimonial .text-content .testi-desc .auth-bio{
    margin-top: 15px;
  }
}
@media(max-width: 479px){
  .about-testimonial .text-content .test-img{
    width: 120px;
  }
  .about-testimonial .text-content{
    flex-direction: column;
  }
  .about-testimonial .text-content .testi-desc{
    text-align: center;
    width: 100%;
    margin: 15px 0 0 0;
  }
  .about-testimonial .text-content .testi-desc .auth-bio{
    justify-content: center;
  }
}

/*slider arrow*/
.about-testimonial .testimonial-slider .owl-nav{
  margin: 0;
}
.about-testimonial .testimonial-slider .owl-nav button{
  font-size: 18px;
  line-height: 1;
  position: absolute;
  bottom: 50%;
  transform: translateY(50%);
  height: 45px;
  width: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin: 0;
  border: 1px solid rgba(0,0,0,10%);
}
.about-testimonial .testimonial-slider .owl-nav button.owl-prev {
  left: -10%;
}
.about-testimonial .testimonial-slider .owl-nav button.owl-next {
  right: -10%;
}
.about-testimonial .testimonial-slider .owl-nav button:hover{
  color: #fff;
  background-color: var(--font-color-primary);
  border-color: var(--font-color-primary);
}
@media(max-width: 1599px){
  .about-testimonial .testimonial-slider .owl-nav button.owl-prev {
    left: -30px;
  }
  .about-testimonial .testimonial-slider .owl-nav button.owl-next {
    right: -30px;
  }
}
@media(max-width: 1199px){
  .about-testimonial .testimonial-slider .owl-nav button{
    font-size: 18px;
    width: 35px;
    height: 35px;
  }
  .about-testimonial .testimonial-slider .owl-nav button.owl-prev {
    left: -30px;
  }
  .about-testimonial .testimonial-slider .owl-nav button.owl-next {
    right: -30px;
  }
}
@media(max-width: 767px){
  .about-testimonial .testimonial-slider .owl-nav {
    margin-top: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .about-testimonial .testimonial-slider .owl-nav button{
    position: unset;
    transform: none;
    margin-right: 10px;
  }
  .about-testimonial .testimonial-slider .owl-nav button:last-child{
    margin-right: 0;
  }
}
</style>