<section class="about-testimonial">
  <div class="container">
    {% if section.settings.section_title != '' or section.settings.section_sub_title != '' %}
    <div class="section-capture">
      <div class="section-title">
        {% if section.settings.section_sub_title != '' %}
        <span>{{ section.settings.section_sub_title }}</span>
        {% endif %}
        {% if section.settings.section_title != '' %}
        <h2>{{ section.settings.section_title }}</h2>
        {% endif %}
      </div>
    </div>
    {% endif %}
    <div class="testimonial-slider owl-carousel" id="testi-slider-{{ section.id }}">
      {% for block in section.blocks %}
      <div class="item">
        <div class="text-content">
          <div class="test-img">
            {%- if block.settings.authr_img -%}
            {{ block.settings.authr_img | image_url: width: 500 | image_tag:
              loading: 'lazy',
              width: block.settings.authr_img.width,
              widths: "155",
              height: block.settings.authr_img.height,
              class: "img-fluid",
              alt: block.settings.authr_img.alt | escape }}
            {%- else -%}
            {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
            {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
            <span class="icon">
              <i class="fa fa-quote-right"></i>
            </span>
          </div>
          <div class="testi-desc">
            <p>{{ block.settings.testi_desc }}</p>
            <div class="auth-bio">
              <h6>{{ block.settings.testi_authrtitle }}</h6>
              <span>{{ block.settings.testi_authrbio }}</span>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
<script type="text/javascript">
addEventListener('DOMContentLoaded', (event) => {
  $('#testi-slider-{{ section.id }}').owlCarousel({
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    loop: false,
    rewind: false,
    items: 2,
    margin: 30,
    nav: true,
    navText: ['<i class="ri-arrow-left-line"></i>','<i class="ri-arrow-right-line"></i>'],
    dots: false,
    responsive: {
      0: {
        items: 1,
        margin: 30
      },
      540: {
        items: 1,
        margin: 30
      },
      768: {
        items: 1,
        margin: 30
      },
      979: {
        items: 1,
        margin: 30
      },
      1199: {
        items: 2,
        margin: 30
      }
    }
  });
});
</script>
