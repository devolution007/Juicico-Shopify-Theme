<section class="custom-video-text" {% if section.settings.section_bg_image_enable %}style="background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1920x700/f7f7f7/999999{% endif %}');"{% endif %} data-section-id="{{ section.id }}">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="video-text-block">
          <div class="custom-video">
						<div class="video-block">
							<a href="{{ section.settings.video_url }}" class="video-btn play-button popup-youtube">
								<span class="icon"><i class="ri-play-fill"></i></span>
							</a>
						</div>
					</div>
					<div class="custom-content" style="background-color: {{ section.settings.content_bg_color }};">
						<div class="content-area">
							<div class="section-capture">
								<div class="section-title">
									{% if section.settings.subtitle != '' %}
									<span class="subtitle" style="color: {{ section.settings.subtitle_color }}">{{ section.settings.subtitle }}</span>
									{% endif %}
									{% if section.settings.title != '' %}
									<h2 class="title" style="color: {{ section.settings.title_color }}">{{ section.settings.title }}</h2>
									{% endif %}
								</div>
							</div>
              <div class="content-info">
                <ul class="content-info-ul">
                  {% for block in section.blocks %}
                  <li class="content-info-li">
                    <div class="info-item">
                      {% if block.settings.info_title != '' %}
                      <h4 class="title">{{ block.settings.info_title }}</h4>
                      {% endif %}
                      {% if block.settings.info_desc != '' %}
                      <p class="desc">{{ block.settings.info_desc }}</p>
                      {% endif %}
                    </div>
                  </li>
                  {% endfor %}
                </ul>
              </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

