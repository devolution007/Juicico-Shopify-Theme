<style>
.home-about-area {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  background-color: {{ section.settings.section_bg_color }};
  {% if section.settings.testi_bgimg_enable %}
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  {% endif %}
  {% if section.settings.border_enable %}
  border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
  {% endif %}
}
@media (max-width: 1199px) {
  .home-about-area {
    padding-top: {{ section.settings.section_padding_top_ip }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .home-about-area {
    padding-top: {{ section.settings.section_padding_top_xs }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
  }
}

/* main css */
.home-about-area .about-area {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: -30px;
  {% if settings.enable_rtl %}
  margin-right: -30px;
  {% else %}
  margin-left: -30px;
  {% endif %}
}
.home-about-area .about-area .about-image,
.home-about-area .about-area .about-content {
  width: calc(50% - 30px);
  margin-top: 30px;
  {% if settings.enable_rtl %}
  margin-right: 30px;
  {% else %}
  margin-left: 30px;
  {% endif %}
}
@media (max-width: 991px) {
  .home-about-area .about-area .about-image,
  .home-about-area .about-area .about-content {
    width: calc(100% - 30px);
  }
}
/* about image css */
.home-about-area .about-area .about-image {
  text-align: center;
}
.home-about-area .about-area .about-image span.image svg {
  width: 100%;
}
/* service css */
.home-about-area .about-area .about-content .content-block {
  width: 83.33%;
}
.home-about-area .about-area .about-content .content-block .section-capture {
  margin-bottom: 51px;
}
.home-about-area .about-area .about-content .content-block .section-capture .section-title {
  {% if settings.enable_rtl %}
  text-align: right;
  {% else %}
  text-align: left;
  {% endif %}
}
