<section class="home-about-area" {% if section.settings.testi_bgimg_enable %}style="background-image: url('{% if section.settings.testi_bgimg %}{{ section.settings.testi_bgimg | image_url }}{% else %}https://dummyimage.com/1920x800/f7f7f7/999999{% endif %}');"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="about-area">
          <div class="about-image">
            <span class="image">
              {%- if section.settings.about_image -%}
              {{ section.settings.about_image | image_url: width: 1080 | image_tag:
                loading: 'lazy',
                width: section.settings.about_image.width,
                height: section.settings.about_image.height,
                class: "img-fluid",
                alt: section.settings.about_image.alt | escape }}
              {%- else -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </span>
          </div>
          <div class="about-content">
            <div class="content-block">
              {% if section.settings.section_title != '' %}
              <div class="section-capture">
                <div class="section-title">
                  <h2>{{ section.settings.section_title }}</h2>
                </div>
              </div>
              {% endif %}
              <div class="about-service">
                <ul class="about-service-ul">
                  {% for block in section.blocks %}
                  <li class="about-service-li">
                    <div class="service-box">
                      <div class="service-icon">
                        <a class="{{ block.settings.service_btn_url }}" class="service-image">
                          {%- if block.settings.service_image -%}
                          {{ block.settings.service_image | image_url: width: 512 | image_tag:
                            loading: 'lazy',
                            width: block.settings.service_image.width,
                            height: block.settings.service_image.height,
                            class: "img-fluid",
                            alt: block.settings.service_image.alt | escape }}
                          {%- else -%}
                          {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                          {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                          {%- endif -%}
                        </a>
                      </div>
                      <div class="service-content">
                        <div class="text-block">
                          {% if block.settings.service_title != '' %}
                          <h4 class="title">{{ block.settings.service_title }}</h4>
                          {% endif %}
                          {% if block.settings.service_description != '' %}
                          <p class="desc">{{ block.settings.service_description }}</p>
                          {% endif %}
                        </div>
                        <div class="service-btn">
                          <a href="{{ section.settings.service_btn_url }}" class="button-block">
                            <span class="btn-icon"><i class="ri-arrow-right-line"></i></span>
                          </a>
                        </div>
                      </div>
                    </div>
                  </li>
                  {% endfor %}
                </ul>
              </div>
              {% if section.settings.service_btn_text != '' %}
              <div class="about-button">
                <a href="{{ section.settings.service_btn_url }}" class="about-btn {% if section.settings.banner_1_button_style == 'btn-style1' %}btn-style{% elsif section.settings.banner_1_button_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}">{{ section.settings.service_btn_text }}</a>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 

