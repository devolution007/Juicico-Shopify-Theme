  margin-top: 38px;
}
.home-about-area .about-area .about-content .content-block .about-service ul.about-service-ul li.about-service-li:first-child {
  margin-top: 0px;
}
.home-about-area .about-area .about-content .content-block .about-service ul.about-service-ul li.about-service-li .service-box {
  display: flex;
  align-items: center;
}
.home-about-area .about-area .about-content .content-block .about-service ul.about-service-ul li.about-service-li .service-box .service-icon a {
  position: relative;
}
.home-about-area .about-area .about-content .content-block .about-service ul.about-service-ul li.about-service-li .service-box .service-icon a svg {
  width: 55px;
}
.home-about-area .about-area .about-content .content-block .about-service ul.about-service-ul li.about-service-li .service-box .service-icon a img {
  width: 55px;
  height: 55px;
}
.home-about-area .about-area .about-content .content-block .about-service ul.about-service-ul li.about-service-li .service-box .service-content {
  {% if settings.enable_rtl %}
  padding-right: 20px;
  {% else %}
  padding-left: 20px;
  {% endif %}
