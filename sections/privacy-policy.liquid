<section class="privacy-policy1">
  <div class="container">
    <div class="row">
      <div class="col">
        <ul class="service-wrap">
          {% for block in section.blocks %}
          <li class="service-wrapper">
            <div class="service-block">
              <div class="service-img" style="background-image: url({% if block.settings.service_img %}{{ block.settings.service_img | image_url }}{% else %}https://dummyimage.com/330x320/f7f7f7/999999{% endif %});">
              </div>
              <div class="service-text">
                {% if block.settings.service_title != '' %}
                <h6>{{ block.settings.service_title }}</h6>
                {% endif %}
                {% if block.settings.service_desc != '' %}
                <p>{{ block.settings.service_desc }}</p>
                {% endif %}
                {% if block.settings.service_button != '' %}
                <a href="{{ block.settings.service_url }}">{{ block.settings.service_button }}</a>
                {% endif %}
              </div>
            </div>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Privacy policy 1",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "section_padding_top_lg",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom_lg",
      "label": "Section Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "section_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom_xs",
      "label": "Section Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section background color",
      "default": "#F3F1F8"
    }
  ],
  "blocks": [
    {
      "type": "privacy_policy",
      "name": "Privacy policy 1",
      "settings": [
        {
          "type": "header",
          "content": "Service Image"
        },
        {
          "type": "image_picker",
          "id": "service_img",
          "label": "Service Image",
          "info": "Recommended Size: 330px x 320px"
        },
        {
          "type": "textarea",
          "id": "service_title",
          "label": "Service Title",
          "default": "Choose products"
        },
        {
          "type": "textarea",
          "id": "service_desc",
          "label": "Service Description",
          "default": "Lorem Ipsum is simply dummy text printing and typesetting"
        },
        {
          "type": "text",
          "id": "service_button",
          "label": "Service button",
          "default": "Read more"
        },
        {
          "type": "url",
          "id": "service_url",
          "label": "Service url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Privacy policy 1"
    }
  ]
}
{% endschema %}
<style>
  .privacy-policy1 {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  @media (max-width: 1199px) {
    .privacy-policy1{
      padding-top: {{ section.settings.section_padding_top_lg }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_lg }}px;
    }
  }
  @media (max-width: 767px) {
    .privacy-policy1 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }
  /*secrvice content*/
  .privacy-policy1 ul.service-wrap{
    display: flex;
    flex-wrap: wrap;
    margin: -30px 0 0 -30px;
  }
  .privacy-policy1 ul.service-wrap li.service-wrapper{
    width: calc(50% - 30px);
    margin: 30px 0 0 30px;
  }
  .privacy-policy1 .service-block {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    border-radius: var(--sti-border-radius);
    overflow: hidden;
  }
  .privacy-policy1 .service-block .service-img{
    width: 50%;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .privacy-policy1 .service-block .service-text{
    padding: 60px 40px;
    width: 50%;
  }
  .privacy-policy1 .service-block .service-text h6{
    font-size: 18px;
    font-weight: var(--font-subtitle-weight-body);
  }
  .privacy-policy1 .service-block .service-text p{
    margin-top: 20px;
  }
  .privacy-policy1 .service-block .service-text a{
    margin-top: 20px;
    color: var(--font-color-primary);
    text-transform: uppercase;
    font-weight: var(--sti-font-weight);
    border-bottom: 1px solid;
  }
  .privacy-policy1 .service-block .service-text a:hover {
    color: var(--font-color-secondary);
    border-color: var(--font-color-secondary);
  }
  @media (max-width: 1599px) {
    .privacy-policy1 .service-block .service-text{
      padding: 30px;
    }
  }
  @media (max-width: 1199px) {
    .privacy-policy1 .service-block .service-text h6{
      font-size: 16px;
    }
    .privacy-policy1 .service-block .service-text p{
      margin-top: 15px;
    }
    .privacy-policy1 .service-block .service-text a {
      margin-top: 15px;
    }
  }
  @media (max-width: 991px) {
    .privacy-policy1 ul.service-wrap li.service-wrapper {
      width: calc(100% - 30px);
    }
    .privacy-policy1 .service-block .service-img{
      width: 100%;
      height: 300px;
    }
    .privacy-policy1 .service-block .service-text{
      width: 100%;
      padding: 15px
    }
  }
</style>