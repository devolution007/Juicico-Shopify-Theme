<section class="privacy-policy3">
  <div class="section-content">
    <div class="container">
      <ul class="grid-wrap">
        <li class="grid-wrapper">
          <div class="privacy-img">
            {%- if section.settings.privacy_img -%}
              {{ section.settings.privacy_img | image_url: width: 1024 | image_tag:
                loading: 'lazy',
                width: section.settings.privacy_img.width,
                height: section.settings.privacy_img.height,
                class: "img-fluid",
                alt: section.settings.privacy_img.alt | escape }}
              {%- else -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            <div class="img-text-content wow animate__fadeInUp">
              <h3>{{ section.settings.image_title }}</h3>
              <h6>{{ section.settings.image_sub_title }}</h6>
            </div>
          </div>
        </li>
        <li class="grid-wrapper">
          <div class="text-wrap">
            <div class="text-wrapper">
              <div class="flag-icon">
                {%- if section.settings.flag_img1 -%}
                {{ section.settings.flag_img1 | image_url: width: 100 | image_tag:
                  loading: 'lazy',
                  width: section.settings.flag_img1.width,
                  height: section.settings.flag_img1.height,
                  class: "img-fluid",
                  alt: section.settings.flag_img1.alt | escape }}
                {%- else -%}
                {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
                <h6>{{ section.settings.content_title1 }}</h6>
              </div>
              <p>{{ section.settings.content_description1 }}</p>
              <a href="{{ section.settings.content_button_url1 }}">{{ section.settings.content_button1 }}</a>
            </div>
            <div class="text-wrapper">
              <div class="flag-icon">
                {%- if section.settings.flag_img2 -%}
                {{ section.settings.flag_img2 | image_url: width: 100 | image_tag:
                  loading: 'lazy',
                  width: section.settings.flag_img2.width,
                  height: section.settings.flag_img2.height,
                  class: "img-fluid",
                  alt: section.settings.flag_img2.alt | escape }}
                {%- else -%}
                {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
                <h6>{{ section.settings.content_title2 }}</h6>
              </div>
              <p>{{ section.settings.content_description2 }}</p>
              <a href="{{ section.settings.content_button_url2 }}">{{ section.settings.content_button2 }}</a>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</section>
