<style type="text/css">
  .privacy-policy3 {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  @media(max-width: 1199px){
    .privacy-policy3 {
      padding-top: {{ section.settings.section_padding_top_lg }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_lg }}px;
    }
  }
  @media(max-width: 767px){
    .privacy-policy3 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }
  .privacy-policy3 ul.grid-wrap {
    display: flex;
    flex-wrap: wrap;
    margin: -30px 0 0 -30px;
  }
  .privacy-policy3 ul.grid-wrap li.grid-wrapper{
    width: calc(50% - 30px);
    margin: 30px 0 0 30px;
  }

  .privacy-policy3 .privacy-img {
    position: relative;
  }
  .privacy-policy3 .privacy-img img{
    border-radius: 0px;
    border-radius: var(--sti-border-radius);
  }
  .privacy-policy3 .privacy-img .img-text-content{
    position: absolute;
    bottom: 15%;
    {% if settings.enable_rtl %}
    left: -15%;
    {% else %}
    right: -15%;
    {% endif %}
    background-color: var(--font-color-primary);
    padding: 40px 50px;
    text-align: center;
    border-radius: var(--sti-border-radius);
  }
  .privacy-policy3 .privacy-img .img-text-content h3{
    color: #fff;
    font-size: 50px;
    font-weight: var(--sti-font-weight);
  }
  .privacy-policy3 .privacy-img .img-text-content h6{
    color: #fff;
    font-size: 18px;
    font-weight: 400;
    margin-top: 10px;
  }
  .privacy-policy3 .text-wrap {
    width: 70%;
    {% if settings.enable_rtl %}
    margin-right: auto;
    {% else %}
    margin-left: auto;
    {% endif %}
    height: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }
  .privacy-policy3 .text-wrapper{
    margin-top: 30px;
    border-radius: 0px;
    padding: 30px 50px;
    width: 100%;
    background-color: #fff;
    border: 1px solid rgba(0,0,0,10%);
    border-radius: var(--sti-border-radius);
  }
  .privacy-policy3 .text-wrapper:first-child{
    margin-top: 0;
  }
  .privacy-policy3 .text-wrapper .flag-icon{
    display: flex;
    align-items: center;
  }
  .privacy-policy3 .text-wrapper .flag-icon img{
    {% if settings.enable_rtl %}
    margin-left: 30px;
    {% else %}
    margin-right: 30px;
    {% endif %}
  }
  .privacy-policy3 .text-wrap h6{
    font-size: 18px;
    font-weight: var(--font-subtitle-weight-body);
    line-height: 1;
  }
  .privacy-policy3 .text-wrap p{
    margin-top: 15px;
  }
  .privacy-policy3 .text-wrap a{
    color: var(--font-color-primary);
    margin-top: 15px;
    font-weight: var(--sti-font-weight);
  }
  .privacy-policy3 .text-wrap a:hover{
    border-color: var(--font-color-secondary); 
    color: var(--font-color-secondary);
  }
  @media(max-width: 1199px){
    .privacy-policy3 .privacy-img .img-text-content{
      width: 100%;
      position: unset;
      padding: 30px; 
    }
    .privacy-policy3 .privacy-img .img-text-content h3{
      font-size: 20px;
    }
    .privacy-policy3 .text-wrap{
      width: 100%;
    }
  }
  @media(max-width: 767px){
    .privacy-policy3 ul.grid-wrap li.grid-wrapper{
      width: calc(100% - 30px);
    }
    .privacy-policy3 .text-wrapper{
      padding: 15px;
      margin-top: 15px;
    }
    .privacy-policy3 .text-wrap h6{
      font-size: 18px;
    }
    .privacy-policy3 .text-wrap p{
      font-size: 14px;
      line-height: 25px;
    }
  }
</style>