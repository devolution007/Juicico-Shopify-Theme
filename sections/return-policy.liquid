      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Section Title"
    },
    {
      "type": "text",
      "id": "section_title1",
      "label": "Section Title",
      "default": "Frequently asked questions"
    },
    {
      "type": "text",
      "id": "section_title2",
      "label": "Section Title",
      "default": "Frequently asked questions"
    },
    {
      "type": "text",
      "id": "section_title3",
      "label": "Section Title",
