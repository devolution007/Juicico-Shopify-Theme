<section class="return-policy1">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="policy-wrap nth-child1">
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.section_title1 != '' %}
              <h2>{{ section.settings.section_title1 }}</h2>
              {% endif %}
            </div>
          </div>
          <div class="que-ans">
            <ul>
              {% for block in section.blocks %}
              {% case block.type %}
              {% when 'accordion_area1' %}
              <li>
                <div class="ans-accordian">
                  <p>{{ block.settings.accordion_ans1 }}</p>
                </div>
              </li>
              {% endcase %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="policy-wrap nth-child2">
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.section_title2 != '' %}
              <h2>{{ section.settings.section_title2 }}</h2>
              {% endif %}
            </div>
          </div>
          <div class="que-ans">
            <ul>
              {% for block in section.blocks %}
              {% case block.type %}
              {% when 'accordion_area2' %}
              <li>
                <div class="ans-accordian">
                  <p>{{ block.settings.accordion_ans2 }}</p>
                </div>
              </li>
              {% endcase %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="policy-wrap nth-child3">
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.section_title3 != '' %}
              <h2>{{ section.settings.section_title3 }}</h2>
              {% endif %}
            </div>
          </div>
          <div class="que-ans">
            <ul>
              {% for block in section.blocks %}
              {% case block.type %}
              {% when 'accordion_area3' %}
              <li>
                <div class="ans-accordian">
                  <p>{{ block.settings.accordion_ans3 }}</p>
                </div>
              </li>
              {% endcase %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="policy-wrap nth-child4">
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.section_title4 != '' %}
              <h2>{{ section.settings.section_title4 }}</h2>
              {% endif %}
            </div>
          </div>
          <div class="que-ans">
            <ul>
              {% for block in section.blocks %}
              {% case block.type %}
              {% when 'accordion_area4' %}
              <li>
                <div class="ans-accordian">
                  <p>{{ block.settings.accordion_ans4 }}</p>
                </div>
              </li>
              {% endcase %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Return policy",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "section_padding_top_ipad",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "section_padding_bottom_ipad",
