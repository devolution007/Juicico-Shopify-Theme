<style>
  .return-policy1 {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  .return-policy1 .policy-wrap.nth-child3,
  .return-policy1 .policy-wrap.nth-child4{
    padding-top: {{ section.settings.section_padding_top }}px;
  }
  @media (max-width: 1199px) {
    .return-policy1 .policy-wrap.nth-child3,
    .return-policy1 .policy-wrap.nth-child4{
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
    }
    .return-policy1 {
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 991px) {
    .return-policy1 .policy-wrap.nth-child2{
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
    }
  }
  @media (max-width: 767px) {
    .return-policy1 .policy-wrap.nth-child2,
    .return-policy1 .policy-wrap.nth-child3,
    .return-policy1 .policy-wrap.nth-child4{
      padding-top: {{ section.settings.section_padding_top_xs }}px;
    }
    .return-policy1 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  .return-policy1 .section-title {
    {%- if settings.enable_rtl -%}
    text-align: right;
    {%- else -%}
    text-align: left;
    {%- endif -%}
  }
  .return-policy1 .que-ans ul li {
    padding-bottom: 15px;
    margin-bottom: 15px;
    border-bottom: var(--sti-border);
  }
  .return-policy1 .que-ans ul li:last-child{
    border-bottom: none;
    padding-bottom: 0;
    margin-bottom: 0;
  }
  .return-policy1 .que-ans ul li a.question{
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    font-size: 18px;
    font-weight: var(--font-custom-weight-header);
  }
  .return-policy1 .que-ans ul li a.question span.que {
    display: block;
  }
</style>