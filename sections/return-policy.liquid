      "default": "#f6f6f6"
    }
  ],
  "blocks": [
    {
      "type": "accordion_area1",
      "name": "Accordion 1",
      "settings": [
        {
          "type": "textarea",
          "id": "accordion_ans1",
          "label": "Answer1",
          "info": "Type Here For Answer",
          "default": "As Sample Store uses some of the latest graphics designs which may not be supported in lower version of browsers"
        }
      ]
    },
    {
      "type": "accordion_area2",
      "name": "Faq Accordion 2",
      "settings": [
        {
          "type": "textarea",
          "id": "accordion_ans2",
          "label": "Answer1",
